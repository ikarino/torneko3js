{
  "name": "torneko3js",
  "repository": "https://github.com/ikarino/torneko3js",
  "version": "0.0.3",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "browser": "browserify -r ./src/index.ts:torneko3 -p [ tsify --noImplicitAny ] > sample/browser/torneko3.bundle.js"
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/tests/**/*.test.ts"
    ]
  },
  "devDependencies": {
    "@types/jest": "^25.1.2",
    "@types/node": "^13.7.1",
    "browserify": "^16.5.0",
    "jest": "^25.1.0",
    "ts-jest": "^25.2.0",
    "ts-node": "^8.6.2",
    "tsify": "^4.0.1",
    "typescript": "^3.7.5"
  }
}
